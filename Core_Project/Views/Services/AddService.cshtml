@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<h1 class="text-center">Add Service</h1>
<br />

<form method="post" class="mt-3">

    <div class="form-group">
        <label for="exampleInputEmail1">Skill Title</label>
        <input type="text" class="form-control text-white" id="exampleInputEmail1" name="Title" placeholder="Service Title">
        @Html.ValidationMessageFor(x => x.Title, null, new { @class = "text-danger custom-class" })

    </div>
   
    <div class="form-group">
        <label for="exampleInputPassword1">Icon URL</label>
        <input type="text" class="form-control text-white" id="exampleInputPassword1" name="imageUrl" placeholder="Image URL">
        @Html.ValidationMessageFor(x => x.ImageUrl, null, new { @class = "text-danger custom-class" })

    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

