@model EntityLayer.Concrete.Experience
@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Add Experience</h1>
<br />
<br />
<form method="post" class="mt-3">

    <div class="form-group">
        <label for="exampleInputEmail1">Experience Title</label>
        <input type="text" class="form-control" id="exampleInputEmail1" name="Name" placeholder="Experience Title">
        @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger custom-class" })

    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Date</label>
        <input type="text" class="form-control" id="exampleInputPassword1" name="Date" placeholder="Date">
        @Html.ValidationMessageFor(x => x.Date, null, new { @class = "text-danger custom-class" })

    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Description</label>
        <input type="text" class="form-control" id="exampleInputPassword1" name="Description" placeholder="Description">
        @Html.ValidationMessageFor(x => x.Description, null, new { @class = "text-danger custom-class" })

    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Job Title</label>
        <input type="text" class="form-control" id="exampleInputPassword1" name="JobTitle" placeholder="Job Title">
        @Html.ValidationMessageFor(x => x.JobTitle, null, new { @class = "text-danger custom-class" })

    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Image Url</label>
        <input type="text" class="form-control" id="exampleInputPassword1" name="ImageUrl" placeholder="Image Url">
        @Html.ValidationMessageFor(x => x.ImageUrl, null, new { @class = "text-danger custom-class" })

    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
