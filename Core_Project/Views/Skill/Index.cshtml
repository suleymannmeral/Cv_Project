@using EntityLayer.Concrete
@model List<Skill>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";

  
}

<div class="card-header bg-transparent border-0">
    <h3 class="text-white text-center mb-0">Skill List</h3>
</div>
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col"></th>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Rate</th>
                <th scope="col"></th>
                <th scope="col">Delete</th>
                <th scope="col">Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
               
                <tr>
                    <td >
                        <div class="media align-items-center">
                            <a href="#" class="avatar rounded-circle">
                                <img alt="Image placeholder" src="@item.imageUrl">
                            </a>
                           
                        </div>
                    </td>
                    <td class="text-white">
                        @item.SkillID
                    </td>
                    <td class="text-white">
                        @item.Title
                    </td>
                    <td class="text-white">
                        <div class="progress">
                            <div class="progress-bar @(item.Value == 100 ? "bg-success" : "bg-danger") role="progressbar" style="width: @item.Value%" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100">@item.Value</div>
                        </div>
                    </td>
                    <td>
                 
                    </td>

                    <td>
                        <a href="/Skill/DeleteSkill/@item.SkillID" class="btn btn-danger">Delete</a>
                    </td>
                    <td>
                        <a href="/Skill/EditSkill/@item.SkillID" class="btn btn-warning">Edit</a>


                    </td>
                </tr>

            }
         
        </tbody>
    </table>
    <br />
    <a href="/Skill/AddSkill" class="btn btn-danger">Add Skill</a>
</div>