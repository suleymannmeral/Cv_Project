@model EntityLayer.Concrete.Portfolio
@{
    ViewData["Title"] = "AddPortfolio";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}



<h1 class="text text-white">Add Portfolio</h1>
<br />
<br />
<form method="post" class="mt-3">

    <div class="form-group">
        <label for="exampleInputEmail1">Project Title</label>
        <input type="text" class="form-control text-white" id="exampleInputEmail1" name="Name" placeholder="Project Title">
       
        @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger custom-class" })

    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Project Logo</label>
        <input type="text" class="form-control text-white" id="exampleInputPassword1" name="ImageUrl" placeholder="Project Logo">
        @Html.ValidationMessageFor(x => x.ImageUrl, null, new { @class = "text-danger custom-class" })

    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Budget</label>
        <input type="text" class="form-control text-white" id="exampleInputPassword1" name="Budget" placeholder="Budget">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Completion</label>
        <input type="text" class="form-control text-white" id="exampleInputPassword1" name="Completion" placeholder="Completion">
        @Html.ValidationMessageFor(x => x.Completion, null, new { @class = "text-danger custom-class" })

    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Image(1)</label>
        <input type="text" class="form-control text-white" id="exampleInputPassword1" name="ImageUrl1" placeholder="ImageUrl1">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Image(2)</label>
        <input type="text" class="form-control text-white" id="exampleInputPassword1" name="ImageUrl2" placeholder="ImageUrl2">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Project Platform Logo</label>
        <input type="text" class="form-control text-white" id="exampleInputPassword1" name="ImageUrl3" placeholder="ImageUrl3">
    </div>
   
    <div class="form-group">
        <label for="exampleInputPassword1">Project Link URL</label>
        <input type="text" class="form-control text-white" id="exampleInputPassword1" name="ProjectLink" placeholder="Project Link">
        @Html.ValidationMessageFor(x => x.ProjectLink, null, new { @class = "text-danger custom-class" })

    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
