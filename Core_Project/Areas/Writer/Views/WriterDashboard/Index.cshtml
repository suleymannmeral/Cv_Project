
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="row">
            <div class="col-12 col-xl-8 mb-4 mb-xl-0">
                <h3 class="font-weight-bold">Welcome @ViewBag.v</h3>
            </div>
            <div class="col-12 col-xl-4">
                <div class="justify-content-end d-flex">
                    <div class="dropdown flex-md-grow-1 flex-xl-grow-0">
                        <button class="btn btn-sm btn-light bg-warning " type="button" id="dropdownMenuDate2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            <i class="mdi mdi-calendar"></i> @DateTime.Now.ToShortDateString()
                        </button>
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card tale-bg">
            <div class="card-people mt-auto">
                <img src="~/skydash/images/dashboard/people.svg" alt="people">
                <div class="weather-info">
                    <div class="d-flex">
                        <div>
                            <h2 class="mb-0 font-weight-normal"><i class="icon-sun mr-2"></i>@ViewBag.v5<sup>C</sup></h2>
                        </div>
                        <div class="ml-2">
                            <h4 class="location font-weight-normal">Rize</h4>
                            <h6 class="font-weight-normal">Türkiye</h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 grid-margin transparent">
        <div class="row">
            <div class="col-md-6 mb-4 stretch-card transparent">
                <div class="card card-tale">
                    <div class="card-body">
                        <p class="mb-4">Message Count</p>
                        <p class="fs-30 mb-2">@ViewBag.v1</p>
                        
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-4 stretch-card transparent">
                <div class="card card-dark-blue">
                    <div class="card-body">
                        <p class="mb-4">Announcements Count</p>
                        <p class="fs-30 mb-2">@ViewBag.v2</p>
                        
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mb-4 mb-lg-0 stretch-card transparent">
                <div class="card card-light-blue">
                    <div class="card-body">
                        <p class="mb-4">Total User Count</p>
                        <p class="fs-30 mb-2">@ViewBag.v3</p>
                     
                    </div>
                </div>
            </div>
            <div class="col-md-6 stretch-card transparent">
                <div class="card card-light-danger">
                    <div class="card-body">
                        <p class="mb-4">Total Skill Count</p>
                        <p class="fs-30 mb-2">@ViewBag.v4</p>
                      
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-title text-center">Praying Times</p>
                <p class="font-weight-500 text-center">
                    And ˹surely˺ your Lord will give so much to you that you will be pleased.
                </p>
                <div class="d-flex flex-wrap mb-5 justify-content-center align-items-center">
                    <div class="mr-5 mt-3">
                        <p class="text-muted text-center">Fajr</p>
                        <h3 class="text-primary fs-30 font-weight-medium">@ViewBag.fajr</h3>
                    </div>
                    <div class="mr-5 mt-3">
                        <p class="text-muted  text-center">Sunrise</p>
                        <h3 class="text-primary fs-30 font-weight-medium">@ViewBag.sunrise</h3>
                    </div>
                    <div class="mr-5 mt-3">
                        <p class="text-muted  text-center">Dhuhr</p>
                        <h3 class="text-primary fs-30 font-weight-medium">@ViewBag.dhuhr</h3>
                    </div>
                    <div class="mt-3 mr-5">
                        <p class="text-muted  text-center">Asr</p>
                        <h3 class="text-primary fs-30 font-weight-medium">@ViewBag.asr</h3>
                    </div>
                    <div class="mt-3 mr-5">
                        <p class="text-muted  text-center">Maghrib</p>
                        <h3 class="text-primary fs-30 font-weight-medium">@ViewBag.maghrib</h3>
                    </div>
                    <div class="mt-3 mr-5  text-center">
                        <p class="text-muted">Isha</p>
                        <h3 class="text-primary fs-30 font-weight-medium">@ViewBag.isha</h3>
                    </div>
                </div>
               
            </div>
        </div>
    </div>

</div>

