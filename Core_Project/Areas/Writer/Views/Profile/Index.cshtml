@model Core_Project.Areas.Writer.Models.UserUpdateViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Profile</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputName1">Name</label>
                    <input type="text" asp-for="Name" class="form-control" id="exampleInputName1" placeholder="@Model.Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Surname</label>
                    <input type="text" class="form-control" asp-for="Surname" id="exampleInputEmail3" placeholder="@Model.Surname">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Password</label>
                    <input type="password" class="form-control" asp-for="Password" id="exampleInputPassword4" placeholder="Password">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Password</label>
                    <input type="password" class="form-control" asp-for="PasswordConfirm" id="exampleInputPassword4" placeholder="Password">
                </div>
                <div class="form-group">
                    <label>File upload</label>
                    <input type="file" asp-for="Picture">
                    
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>

