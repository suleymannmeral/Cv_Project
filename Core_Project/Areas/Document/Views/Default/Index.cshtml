@using EntityLayer.Concrete
@model List<Documents>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}



<div class="card-header border-0">
    <h3 class="mb-2 text-center">Document Panel</h3>
</div>
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col">Course Name</th>
              
                <th scope="col">View</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
               

                <tr>

                    <td class="text-white">
                        @item.CourseName
                    </td>
                  
                  
                  


                    <td>
                        <a href="/Document/Default/ViewDocumentsByName/@item.CourseName" class="btn btn-warning">View</a>


                    </td>
                </tr>

            }
        </tbody>
    </table>
    <br />
    <a href="/Document/Default/AddDocument" class="btn btn-danger mb-3">Add Document</a>
</div>
